{
  "compilerOptions": {
    "declaration": true,
    "target": "es2015",
    "outDir": "dist",
    "module": "CommonJS",
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "strict": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
